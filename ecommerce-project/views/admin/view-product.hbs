<section>
  <div class="container mt-3">
    <div class="row">
      <a href="/admin/add-product" class="btn btn-success ml-auto">Add products</a>
    </div><br><br>
    <table class="table mt-5" id="productsTable">
      <thead class="thead-dark">
        <tr>
          <th scope="col">No</th>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Price</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>
          <th scope="col">Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.productName}}</td>
          <td>{{this.productCategory}}</td>
          <td>{{this.productPrice}}</td>
          <td>{{this.productDescription}}</td>
          <td><img style="height: 50px; width:50px" ; src="/product-images/{{this._id}}.jpg" alt="products img"></td>
          <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
              onclick="return confirm('Are you want to delete {{this.productName}} ')">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>

  </div>
</section>

<script>
  $(document).ready(function () {
    $('#productsTable').DataTable();
  });
</script>